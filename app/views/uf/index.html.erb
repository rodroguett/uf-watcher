<div class="bg-white p-8 rounded-lg shadow-xl w-full max-w-lg space-y-6">
  <div class="text-center">
    <h1 class="text-3xl font-bold text-gray-800">Valor de la UF</h1>
    <p class="text-sm text-gray-500 mt-2">Consulta el valor de la Unidad de Fomento (UF)</p>
  </div>

  <% if flash[:alert] %>
    <div class="bg-red-100 text-red-700 p-4 rounded-lg text-sm text-center" role="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% if @uf_value %>
    <div class="border border-indigo-200 bg-indigo-50 p-6 rounded-lg text-center shadow-inner">
      <p class="text-lg text-indigo-700 font-semibold">Valor de la UF el día <%= @uf_value.date.strftime("%d-%m-%Y") %>:</p>
      <p class="text-4xl font-bold text-indigo-900 mt-2">$<%= number_with_delimiter(@uf_value.value, delimiter: ".") %></p>
    </div>
  <% else %>
    <div class="bg-blue-50 border border-blue-200 p-6 rounded-lg text-center shadow-inner">
      <p class="text-lg text-blue-700 font-semibold">
        No se encontró el valor para la fecha seleccionada.
      </p>
    </div>
  <% end %>

  <div class="space-y-4">
      <%= form_with url: uf_path, method: :get, class: "space-y-4" do %>
        <div>
          <label for="date" class="block text-sm font-medium text-gray-700 mb-1">Buscar por fecha</label>
          <div class="mt-1">
            <input type="text" name="date" id="date" placeholder="Seleccione una fecha"
                   class="w-full rounded-md border border-gray-300 py-2 px-3 text-gray-700 focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
          </div>
        </div>
        <div>
          <%= submit_tag "Consultar", class: "w-full bg-indigo-600 text-white font-semibold py-2 px-4 rounded-md shadow-md hover:bg-indigo-700 transition-colors cursor-pointer" %>
        </div>
      <% end %>
    </div>
</div>

<script>
  flatpickr("#date", {
    dateFormat: "Y-m-d",
    maxDate: "today",
    minDate: "2025-01-01"
  });
</script>
